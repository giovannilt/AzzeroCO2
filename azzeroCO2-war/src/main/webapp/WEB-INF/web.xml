<web-app>
    <display-name>AzzeroCO2-Maven-Archetype</display-name>
    <!-- Servlets -->

    <servlet>
        <servlet-name>hustonServlet</servlet-name>
        <servlet-class>it.agilis.mens.azzeroCO2.server.HustonServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>hustonServlet</servlet-name>
        <url-pattern>/azzeroCO2/huston</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>azzeroCO2.html</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>
    
